                <span class="n">Navigator</span><span class="o">.</span><span class="na">pop</span><span class="o">(</span><span class="n">context</span><span class="o">);</span>
                <span class="n">Navigator</span><span class="o">.</span><span class="na">push</span><span class="o">(</span><span class="n">context</span><span class="o">,</span> <span class="n">MaterialPageRoute</span><span class="o">(</span><span class="nl">builder:</span> <span class="o">(</span><span class="n">context</span><span class="o">)=&gt;</span> <span class="n">NewScreen</span><span class="o">()));</span>
              <span class="o">},</span>
            <span class="o">)</span>
          <span class="o">],</span>
        <span class="o">),</span>
      <span class="o">),</span>
      <span class="nl">body:</span> <span class="n">Container</span><span class="o">(</span>
        <span class="nl">padding:</span> <span class="n">EdgeInsets</span><span class="o">.</span><span class="na">all</span><span class="o">(</span><span class="mi">8</span><span class="o">),</span>
        <span class="nl">child:</span> <span class="n">_selectedFragment</span><span class="o">,</span>
      <span class="o">)</span>
    <span class="o">);</span>
  <span class="o">}</span>
<span class="o">}</span>
